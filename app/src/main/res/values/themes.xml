<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodOrdering" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_first</item>
        <item name="colorPrimaryVariant">@color/primary_second</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_third</item>
        <item name="colorSecondaryVariant">@color/primary_fourth</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/primary_fifth</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/cabin</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="Custom.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="android:textColor">@color/chip_text_tint</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipSurfaceColor">@color/white</item>
    </style>
</resources>